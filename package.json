{
  "name": "mprettier",
  "main": "./lib/main",
  "scripts": {
    "lint": "standard lib/*.js spec/*.js"
  },
  "version": "0.6.0",
  "description": "Minimalistic prettier runner for more performant Atom startup",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/t9md/atom-mprettier",
  "engines": {
    "atom": "^1.15.0"
  },
  "configSchema": {
    "useDiffReplace": {
      "order": 0,
      "type": "boolean",
      "default": true
    },
    "notificationMethodOnPrettierError": {
      "order": 0,
      "type": "string",
      "default": "atom-notification",
      "enum": [
        "atom-notification",
        "console"
      ]
    },
    "debug": {
      "order": 1,
      "type": "boolean",
      "default": false
    },
    "nodePath": {
      "order": 3,
      "type": "string",
      "default": "node",
      "title": "Node executable",
      "description": "Path to the Node executable used to start the language server."
    },
    "formatByStandardForJavascript": {
      "order": 4,
      "type": "boolean",
      "default": false
    },
    "formatOnSave": {
      "order": 5,
      "type": "object",
      "collapsed": false,
      "properties": {
        "enable": {
          "title": "Enable",
          "order": 0,
          "description": "works only for **active** editor",
          "type": "boolean",
          "default": false
        },
        "skipWhenPrettierIsNotProjectDependencies": {
          "title": "Skip When Prettier Is Not Project Dependencies",
          "order": 1,
          "type": "boolean",
          "default": false
        },
        "skipWhenPrettierConfigIsNotFound": {
          "title": "Skip When Prettier Config Is Not Found",
          "order": 2,
          "type": "boolean",
          "default": false
        },
        "disabledParsers": {
          "title": "Disabled Parsers",
          "order": 3,
          "description": "Put parser names here e.g. `markdown, postcss`",
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          }
        },
        "formatByStandardForJavascriptIfStandardIsProjectDependencies": {
          "title": "Format By Standard For Javascript If Standard Is Project Dependencies",
          "order": 4,
          "type": "boolean",
          "default": true
        }
      }
    },
    "prettierToUseInOrder": {
      "order": 6,
      "type": "object",
      "collapsed": false,
      "properties": {
        "inCurrentFileDirectory": {
          "title": "1. In Current File Directory",
          "order": 0,
          "type": "boolean",
          "default": false
        },
        "inCurrentProject": {
          "title": "2. In Current Project",
          "order": 1,
          "type": "boolean",
          "default": true
        },
        "inAbsolutePath": {
          "title": "3. In Absolute Path",
          "order": 2,
          "type": "boolean",
          "default": false
        },
        "prettierPath": {
          "title": "Prettier Path",
          "order": 3,
          "type": "string",
          "default": "/usr/local/lib/node_modules/prettier/index.js"
        },
        "globallyInstalled": {
          "title": "4. Globally Installed",
          "order": 4,
          "type": "boolean",
          "default": false
        },
        "bundled": {
          "title": "5. Bundled in mprettier",
          "order": 5,
          "type": "boolean",
          "default": true
        }
      }
    },
    "scopesForParser": {
      "order": 7,
      "type": "object",
      "collapsed": false,
      "properties": {
        "javascriptParser": {
          "title": "JavaScript Parser",
          "order": 0,
          "type": "string",
          "default": "babel",
          "enum": [
            "babel",
            "babylon",
            "flow"
          ]
        },
        "javascript": {
          "order": 1,
          "title": "javascript",
          "description": "Parser you chose in `JavaScript Parser` is used",
          "type": "array",
          "default": [
            "source.js",
            "source.jsx",
            "source.js.jsx",
            "source.babel",
            "source.js-semantic",
            "text.html.basic",
            "text.html.vue"
          ],
          "items": {
            "type": "string"
          }
        },
        "typescript": {
          "order": 2,
          "title": "typescript",
          "type": "array",
          "default": [
            "source.ts",
            "source.tsx",
            "source.ts.tsx"
          ],
          "items": {
            "type": "string"
          }
        },
        "postcss": {
          "order": 3,
          "title": "postcss",
          "type": "array",
          "default": [
            "source.css",
            "source.less",
            "source.css.less",
            "source.scss",
            "source.css.scss",
            "source.css.postcss"
          ],
          "items": {
            "type": "string"
          }
        },
        "json": {
          "order": 4,
          "title": "json",
          "type": "array",
          "default": [
            "source.json"
          ],
          "items": {
            "type": "string"
          }
        },
        "graphql": {
          "order": 5,
          "title": "graphql",
          "type": "array",
          "default": [
            "source.graphql"
          ],
          "items": {
            "type": "string"
          }
        },
        "markdown": {
          "order": 6,
          "title": "markdown",
          "type": "array",
          "default": [
            "source.gfm",
            "text.md"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "dependencies": {
    "diff": "^7.0.0",
    "fs-plus": "^3.0.1",
    "read-pkg-up": "^3.0.0",
    "standard": "^10.0.3"
  },
  "standard": {
    "globals": [
      "atom"
    ]
  },
  "devDependencies": {
    "prettier": "^2.8.8"
  }
}
